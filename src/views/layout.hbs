<!doctype html>
<html>

<head>
    <title>AITetris</title>
    <link rel='icon' href='/img/icon.png'>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>
    <!-- Bootstrap CSS -->
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css' integrity='sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4' crossorigin='anonymous'>
</head>

<body>
    <nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
        <a class='navbar-brand' href='/'>AITetris</a>
        <div class='collapse navbar-collapse'>
            <ul class='navbar-nav mr-auto'>
                <li class='nav-item'>
                    <a class='nav-link' href='/watch'>Watch</span></a>
                </li>
                <li class='nav-item'>
                    <a class='nav-link' href='/play'>Play</span></a>
                </li>
                <li class='nav-item'>
                    <a class='nav-link' href='/create'>Create</span></a>
                </li>
            </ul>
            {{#if sessionUser}}
                <div class = 'text-light'>Logged in as {{sessionUser.username}}</div>
            {{else}}
                <ul class='navbar-nav'>
                    <li class='nav-item'>
                        <a class='nav-link' href='/login'>Login</span></a>
                    </li>
                    <li class='nav-item'>
                        <a class='nav-link' href='/register'>Register</span></a>
                    </li>
                </ul>
            {{/if}}
        </div>
    </nav>
    <!-- Bootstrap JavaScript -->
